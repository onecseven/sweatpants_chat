{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "pretty": true,
    "outDir": "./build",
    "module": "commonjs",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": ["es2015"]
  },
  "include": ["./server/*.ts", "./server/*/*.ts"],
  "exclude": ["./node_modules", "**/*.spec.ts"]
}
